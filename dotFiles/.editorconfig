# Top-most EditorConfig file
root = true

# Default settings for all file types
[*]
indent_style = space
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Python specific settings
[*.py]
indent_size = 4

# Markdown specific settings
[*.md]
trim_trailing_whitespace = false
